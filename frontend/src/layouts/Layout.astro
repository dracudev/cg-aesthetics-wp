---
import SEO, { type SEOProps } from '../components/SEO.astro';
import Navbar from '../components/Navbar';
import Footer from '../components/Footer';
import '../styles/global.css';

interface Props extends SEOProps {
  title?: string;
  description?: string;
}

const props = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <SEO {...props} />
  </head>
  <body class="antialiased" style="background-color: var(--color-primary-background); color: var(--color-text-body); font-family: var(--font-body);">
    <Navbar client:load />
    <slot />
    <Footer client:load />
  </body>
</html>

<style is:global>
  /* Base Typography */
  body {
    font-family: 'Inter', sans-serif;
  }
  
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Playfair Display', serif;
  }
  
  /* Smooth Scrolling */
  html {
    scroll-behavior: smooth;
  }
  
  /* Remove default margin */
  body {
    margin: 0;
    padding: 0;
  }
</style>
